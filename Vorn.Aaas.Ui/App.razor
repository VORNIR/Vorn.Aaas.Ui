@using System.Reflection
@inject NavigationManager NavigationManager
@inject AdditionalAssembliesRegistry registry
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="registry.Assemblies">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <PageTitle>Not logged in</PageTitle>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <MudAlert Severity="Severity.Warning">Not found.</MudAlert>
        </NotFound>
    </Router>
</CascadingAuthenticationState>