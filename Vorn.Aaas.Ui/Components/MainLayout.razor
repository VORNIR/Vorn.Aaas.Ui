@using Microsoft.Extensions.Configuration
@inherits LayoutComponentBase
@layout AaasLayout
<MudLayout>
    <MudDrawer @bind-Open="drawerOpen"
               Elevation="1"
               Anchor="Anchor.Right"
               Style="@($"background:{Colors.Grey.Lighten2};")"
               Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader Class="d-flex justify-center">
        </MudDrawerHeader>
        <MudDrawerContainer Class="d-flex flex-column flex-grow-1 justify-center align-center px-3">
            <NavMenu />
            @if(drawerOpen)
            {
                <MudFab OnClick=DrawerToggle
                    Style="position:fixed; bottom:5px;right:5px; z-index:1000;"
                    Color=Color.Secondary
                    Class="d-print-none"
                    Size=Size.Small
                    Icon=@Icons.Material.Filled.Close />
            }
        </MudDrawerContainer>
    </MudDrawer>
    <MudMainContent>
        <MudFab OnClick=DrawerToggle
                Style="position:fixed; bottom:5px;right:5px; z-index:1000;"
                Color=Color.Primary
                Class="d-print-none"
                Size=Size.Small
                Icon=@Icons.Material.Filled.Menu />
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool drawerOpen = false;

    void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }
}